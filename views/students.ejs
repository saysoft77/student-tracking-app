<style>
.header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.manage-btn {
    display: inline-block;
    padding: 10px 15px;
    background-color: #008CBA;
    color: white;
    border: none;
    cursor: pointer;
    border-radius: 4px;
    text-decoration: none;
}

.manage-btn:hover {
    background-color: #007B9A;
}
</style>

<div class="header-container">
    <h2>Students</h2>
    <a href="/students/manage" class="manage-btn">Manage Students</a>
</div>

<table id="studentTable">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Grade</th>
            <th>Class</th>
        </tr>
    </thead>
    <tbody>
        <% students.forEach(function(student) { %>
            <tr>
                <td><%= student.StudentID %></td>
                <td><%= student.FirstName %></td>
                <td><%= student.LastName %></td>
                <td><%= student.Grade %></td>
                <td><%= student.Class %></td>
            </tr>
        <% }); %>
    </tbody>
</table>
